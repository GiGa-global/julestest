<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_saleorder_document_anticipo" inherit_id="sale.report_saleorder_document">
        <!--
            Replace the standard note with our dynamic note.
            Using a generic xpath selector to be more robust against different report structures
            in different Odoo versions or with other custom modules installed.
        -->
        <xpath expr="//*[@t-field='doc.note']" position="replace">
            <span t-field="doc.note_dinamico"/>
        </xpath>
    </template>
</odoo>
