<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_order_form_anticipo" model="ir.ui.view">
            <field name="name">sale.order.form.anticipo</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <!-- Add the down payment fields to the totals section -->
                <xpath expr="//group[hasclass('oe_subtotal_footer')]" position="inside">
                    <field name="anticipo_porcentaje_fijo" invisible="1"/>
                    <field name="anticipo_porcentaje" class="oe_subtotal_footer_separator"/>
                    <field name="monto_anticipo"/>
                </xpath>

                <!--
                    The modification for the 'note' field is removed from the form view.
                    This ensures the user can always edit the Terms & Conditions on the screen.
                    The dynamic replacement will only happen in the printed report.
                -->
            </field>
        </record>
    </data>
</odoo>
