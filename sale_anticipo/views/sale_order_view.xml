<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_order_form_anticipo" model="ir.ui.view">
            <field name="name">sale.order.form.anticipo</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[hasclass('oe_subtotal_footer')]" position="inside">
                    <!-- Add the technical field to the view (hidden) to make sure the context is passed to the server
                         for on-the-fly computations to work correctly. -->
                    <field name="anticipo_porcentaje_fijo" invisible="1"/>
                    <field name="anticipo_porcentaje" class="oe_subtotal_footer_separator"/>
                    <field name="monto_anticipo"/>
                </xpath>

                <!-- Replace the original note field with our dynamic one -->
                <xpath expr="//field[@name='note']" position="replace">
                    <field name="note" invisible="1"/>
                    <field name="note_dinamico" nolabel="1" readonly="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
